<!DOCTYPE html>
<html lang="vi">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
<title>Profile Page</title>
<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="css/Header.css" rel="stylesheet">
</head>
<body>
<!-- Header -->
<nav class="navbar navbar-expand bg-white navbar-custom border-bottom fixed-top shadow p-3 mb-5 bg-body-tertiary rounded mb-5">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold" href="/">Logo</a>
        <div class="ms-auto dropdown">
            <span class="me-2">Email</span>
            <a href="#" id="avatarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="Cat.jpg" alt="Avatar"
                        class="rounded-circle avatar-small">
            </a>
            <ul class="dropdown-menu dropdown-menu-end p-4 text-center" aria-labelledby="avatarDropdown" style="min-width:250px; background-color: #ffffff;">
                <li>
                    <img src="Cat.jpg" alt="Avatar" class="rounded-circle avatar-large mb-2">
                    <div class="fw-bold mb-2">Username</div>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <div class="shadow-sm p-3 mb-2 bg-body-tertiary rounded">
                        <a asp-controller="Account" asp-action="Profile" class="dropdown-item">Profile</a>
                        <a class="dropdown-item" href="#">Setting</a>
                    </div>
                </li>
                <li>
                    <div class="shadow-sm p-3 mb-2 bg-body-tertiary rounded">
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            <button class="dropdown-item" type="submit">Logout</button>
                        </form>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</nav>
<!-- Main Content -->
<div class="content-container mb-5">
    @if (IsSectionDefined("Sidebar"))
    {
        <aside class="sidebar col-3">
            @RenderSection("Sidebar", required: false)
        </aside>
    }
    <div class="col-9">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</div>

    @RenderSection("Scripts", required: false)
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
@{
    ViewBag.Title = "Profile";
    Layout = "_Header";
}
@model CloudServer.Common.Dto.UserDto.UserDto;

<div class="container my-container">
    <div class="card p-4 justify-content-center align-items-center">
        <div class="row">
            <!-- Cột bên trái: Avatar + Menu -->
            <div class="col-md-4 text-center border-end mb-4 mb-md-0">
                <div class="mb-3">
                    <img src="~/images/avatar.png" alt="Avatar" class="rounded-circle border" style="width:150px; height:150px;">
                </div>
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item mb-2">
                        <a class="nav-link active" href="#">Information</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Account</a>
                    </li>
                </ul>
            </div>

            <!-- Cột bên phải: Form -->
            <div class="col-md-8">
                <h3 class="text-success text-center mb-3">User Info</h3>
                <hr class="divider" />
                <form>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Username</label>
                        <input type="text" class="form-control" value="Yui">
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Email</label>
                        <input type="email" class="form-control" value="duy@gmail.com">
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Address</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Phone Number</label>
                        <input type="text" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-custom">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS (optional) -->
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTI2XaG0Fwlj1DQLzV0n1L+z33//r4ZC+OGpamoFVy38N9"
            crossorigin="anonymous">
    </script>
}